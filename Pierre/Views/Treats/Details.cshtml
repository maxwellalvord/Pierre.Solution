@model Pierre.Models.Treat;

<div class="container">
  <hr />
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This Treat does not contain any Flavors</p>
  }
  else
  {
    <h4>Flavors the Treat contains:</h4>
    <ul>
      @foreach(var join in Model.JoinEntities)
      {
        <li>@join.Flavor.Name</li>
        @using (Html.BeginForm("DeleteFlavor", "Treats"))
        {
          @Html.Hidden("joinId", @join.FlavorTreatId)
          <input type="submit" value="Delete" class="btn btn-danger"/>
        }
      }
    </ul>
  }
    <ul id="main">
      <li>@Html.ActionLink("Add a Flavor", "AddFlavor", new {id = Model.TreatId})</li>
      <li>@Html.ActionLink("Back to Treats", "Index")</li>
      <li>@Html.ActionLink("Edit Treat", "Edit", new {id = Model.TreatId })</li>
      <li>@Html.ActionLink("Delete Treat", "Delete", new {id = Model.TreatId })</li>
    </ul>
</div>
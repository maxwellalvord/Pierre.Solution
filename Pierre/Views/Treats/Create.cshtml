@model Pierre.Models.Treat

<div class="container">
  <h3>Add a new Treat</h3>
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new { required = "required" })
      <input type="submit" value="Add new Treat" class="btn btn-success" />
    }
  <p>@Html.ActionLink("Show all treats", "Index")</p>
</div>
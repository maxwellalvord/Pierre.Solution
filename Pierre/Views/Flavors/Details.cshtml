@model Pierre.Models.Flavor;

<div class="container">
  <hr />
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This Flavor does not contain any Treats</p>
  }
  else
  {
    <h4>Treats the Flavor contains:</h4>
    <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Treat.Name</li>
      @using (Html.BeginForm("DeleteTreat", "Flavors"))
      {
        @Html.Hidden("joinId", @join.FlavorTreatId)
        <input type="submit" value="Delete" class="btn btn-danger"/>
      }
    }
    </ul>
  }

    <ul id="main">
      <li>@Html.ActionLink("Add a Treat", "AddTreat")</li>
      <li>@Html.ActionLink("Back to Flavors", "Index")</li>
      <li>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</li>
      <li>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</li>
    </ul>
</div>
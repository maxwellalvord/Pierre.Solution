@using Pierre.Models;


<div class="container">
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
      }
    </ul>
  } 
  else
  {
    <h3>No Flavors have been added yet!</h3>
  }
  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add new Flavor", "Create")</td>
      <td>@Html.ActionLink("Add new Treat", "Create", "Treats")</td>
      <td>@Html.ActionLink("Home", "Index", "Home")</td>
    </tr>
  </table>
</div>
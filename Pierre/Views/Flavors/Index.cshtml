@using Pierre.Models;


<div class="container">
  @if (Model.Count != 0)
  {

    <ul>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
      }
    </ul>
  } 
  else
  {
    <h3 align=center>No Flavors have been added yet!</h3>
  }

    <ul id="main">
      <li>@Html.ActionLink("Add new Flavor", "Create")</li>
      <li>@Html.ActionLink("Home", "Index", "Home")</li>
    </ul>
</div>